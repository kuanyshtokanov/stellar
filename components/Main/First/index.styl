.first
  align-items center
  margin-bottom 3u
  +tablet()
    margin-bottom 4u
  +desktop()
    margin-bottom 2u

.list
  justify-content center
  width 100%
  margin-bottom 3u
  +tablet()
    justify-content center
    align-items center
    flex-flow row wrap
  +desktop()
    flex-direction row
  +wide()
    margin-left 0
    margin-right 0

.listItem
  margin-left 0
  align-items center
  margin-top 5u
  &.head  
    margin-top 0
  &.tail
    +tablet()
      margin-top 4u
    +desktop()
      margin-top 0
  +tablet()
    margin-top 0
    padding 0 2u
    width 50%
  +desktop()
    width 33%

.outerIcon
  width 16u
  height 16u
  border-radius 20u
  border solid 1px rgb(221, 221, 221)
  padding 1u
  justify-content center
  align-items center

.icon
  justify-content center
  align-items center
  width 100%
  height 100%
  border-radius 20u
  border solid 1px rgb(221, 221, 221)

.title
  margin-bottom 1.5u
  font-size 3u
  font-weight 100
  line-height 4u
  color #636363

.subtitle
  margin-top 4u
  font-size 2.5u
  color #636363

.line
  background-color #935d8c
  height 2px
  width 10u
  +tablet()
    width 13u
  +wide()
    width 18u

.txt
  font-size 2u
  color #636363
  text-align center
  margin-top 3u
  

.border
  height 24u
  width 24u
  border-radius 20u
  border 1px solid #dddddd
  align-items center
  justify-content center
  +tablet()
    height 34u
    width 34u

.img
  height 22u
  width 22u
  border-radius 20u
  +tablet()
    height 32u
    width 32u

.btn
  width 100%
  
  +tablet()
    width auto
    align-items center
